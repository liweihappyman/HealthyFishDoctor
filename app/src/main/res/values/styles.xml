<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme2" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#019b79</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--toolbar使用的主题-->
    <style name="Toolbartheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

    </style>
    <!--下方导航栏布局属性-->
    <style name="bottom_title_barlayout" >
        <item name="android:clickable">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="bottom_title_bar_iv">
        <item name="android:layout_width">70px</item>
        <item name="android:layout_height">70px</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="bottom_title_bar_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">35px</item>
        <item name="android:textColor">@color/color_general_and_title</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="funtion_menu_tv">
        <item name="android:layout_marginTop">28px</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">42px</item>
        <item name="android:textColor">@color/color_content_title</item>
    </style>
    <!--普通标题文字颜色及大小-->
    <style name="genera_title_text">
        <item name="android:textSize">36px</item>
        <item name="android:textColor">@color/color_general_and_title</item>
    </style>
    <style name="content_title_text">
        <item name="android:textSize">43px</item>
        <item name="android:textColor">@color/color_content_title</item>
    </style>
    <style name="big_content_title_text">
        <item name="android:textSize">55px</item>
        <item name="android:textColor">@color/color_content_title</item>
    </style>

    <style name="textSize_30">
        <item name="android:textSize">30px</item>
    </style>

    <style name="textSize_36">
        <item name="android:textSize">36px</item>
    </style>

    <style name="textSize_42">
        <item name="android:textSize">42px</item>
    </style>

    <style name="textSize_48">
        <item name="android:textSize">48px</item>
    </style>

    <style name="textSize_54">
        <item name="android:textSize">54px</item>
    </style>


    <style name="textSize_60">
        <item name="android:textSize">60px</item>
    </style>

    <style name="textSize_66">
        <item name="android:textSize">66px</item>
    </style>

    <!--问诊模块弹出购买服务对话框动画-->
    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <!--问诊模块弹出购买服务底部对话框弹框-->
    <style name="BottomDialog" parent="@style/AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!--病历夹EditText_hint样式-->
    <style name="EditText_Hint">
        <item name="android:background">@null</item>
        <item name="android:layout_marginTop">20px</item>
        <item name="android:layout_marginLeft">50px</item>
        <item name="android:layout_marginRight">50px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/unfilled</item>
        <item name="android:textSize">48px</item>
    </style>
    <!--病历夹提示标签样式-->
    <style name="TextView_Lable">
        <item name="android:layout_marginTop">10px</item>
        <item name="android:layout_marginLeft">50px</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">36px</item>
        <item name="android:textColor">@color/color_primary_dark</item>
    </style>

    <style name="Divider">
        <item name="android:layout_height">3px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">50px</item>
        <item name="android:layout_marginRight">50px</item>
        <item name="android:layout_marginTop">15px</item>
        <item name="android:background">@color/color_divider</item>
    </style>
    <style name="PopupRightAnimation" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/popup_anim_right</item>
        <item name="android:windowExitAnimation">@anim/popup_anim_right_exit</item>
    </style>

</resources>
