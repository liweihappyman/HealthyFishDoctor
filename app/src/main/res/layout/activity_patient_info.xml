<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include layout="@layout/toolbar" />

    <TextView
        style="@style/textSize_54"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50px"
        android:layout_marginTop="30px"
        android:text="基本信息" />

    <EditText
        android:id="@+id/name"
        style="@style/EditText_Hint"
        android:layout_marginTop="70px"
        android:hint="姓名 (*必填)" />

    <ImageView style="@style/Divider" />

    <TextView
        android:id="@+id/gender"
        style="@style/EditText_Hint"
        android:clickable="true"
        android:layout_marginTop="50px"
        android:hint="性别 (*必填)" />

    <ImageView style="@style/Divider" />

    <TextView
        android:id="@+id/birthday"
        style="@style/EditText_Hint"
        android:clickable="true"
        android:layout_marginTop="50px"
        android:hint="出生日期" />

    <ImageView style="@style/Divider" />

    <EditText
        android:id="@+id/id_number"
        style="@style/EditText_Hint"
        android:layout_marginTop="50px"
        android:hint="身份证号码" />

    <ImageView style="@style/Divider" />

    <EditText
        android:id="@+id/occupation"
        style="@style/EditText_Hint"
        android:layout_marginTop="50px"
        android:hint="职业" />

    <ImageView style="@style/Divider" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:text="婚姻状态" />

        <RadioGroup
            android:id="@+id/marital_status"
            android:layout_marginLeft="60px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="婚姻状况"
            android:checkedButton="@+id/unmarried"
            >

            <RadioButton
                android:id="@+id/unmarried"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未婚"></RadioButton>

            <RadioButton
                android:id="@+id/married"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已婚"></RadioButton>
        </RadioGroup>

    </com.zhy.autolayout.AutoLinearLayout>
    <ImageView style="@style/Divider" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/save"
        style="@style/textSize_54"
        android:layout_width="match_parent"
        android:layout_height="125px"
        android:background="@drawable/selector_1dp_btn_color_from_primary_to_white"
        android:clickable="true"
        android:gravity="center"
        android:text="保存"
        android:textColor="@android:color/white" />

</com.zhy.autolayout.AutoLinearLayout>
