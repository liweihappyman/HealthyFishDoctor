<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="972px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="157px"
        android:paddingTop="40px"
        android:paddingBottom="40px"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="48px"
            android:layout_height="58px"
            android:layout_marginLeft="48px"
            android:src="@mipmap/ic_input_password"/>

        <EditText
            android:id="@+id/et_input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70px"
            android:maxLines="1"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            android:hint="输入密码"
            android:background="@null" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="972px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="70px"
        android:paddingTop="40px"
        android:paddingBottom="40px"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="48px"
            android:layout_height="58px"
            android:layout_marginLeft="48px"
            android:src="@mipmap/ic_verify_password"/>

        <EditText
            android:id="@+id/et_verify_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            android:layout_marginLeft="70px"
            android:hint="验证密码"
            android:background="@null" />

    </LinearLayout>

    <Button
        android:id="@+id/bt_done"
        android:layout_width="978px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="130px"
        android:paddingTop="40px"
        android:paddingBottom="40px"
        android:background="@drawable/selector_4dp_btn_color_from_primary_to_white"
        android:gravity="center"
        android:text="完成"
        android:textColor="@color/selector_text_color_from_white_to_primary"
        android:textSize="54px"/>
</LinearLayout>