<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f4f4f4"
              android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="972px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="157px"
        android:paddingTop="40px"
        android:paddingBottom="40px"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="48px"
            android:layout_height="58px"
            android:layout_marginLeft="48px"
            android:src="@mipmap/ic_login_user"/>

        <EditText
            android:id="@+id/et_input_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:inputType="number"
            android:imeOptions="actionNone"
            android:maxLength="11"
            android:maxLines="1"
            android:hint="输入手机号"
            android:background="@null"
            android:textSize="48px"
            android:textColor="@color/color_hint"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="972px"
        android:layout_height="wrap_content"
        android:layout_marginTop="70px"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="526px"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="40px"
            android:paddingBottom="40px"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="48px"
                android:layout_height="58px"
                android:layout_marginLeft="48px"
                android:src="@mipmap/ic_input_validation_code"/>

            <EditText
                android:id="@+id/et_input_validation_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:imeOptions="actionDone"
                android:inputType="textVisiblePassword"
                android:maxLines="1"
                android:maxLength="8"
                android:hint="输入验证码"
                android:background="@null"
                android:textSize="48px"
                android:textColor="@color/color_hint"/>

        </com.zhy.autolayout.AutoLinearLayout>
        
        <Button
            android:id="@+id/bt_get_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30px"
            android:gravity="center"
            android:textSize="48px"
            android:textColor="@android:color/white"
            android:text="获取短信验证码"/>


        </com.zhy.autolayout.AutoLinearLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="978px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="125px"
        android:background="@drawable/selector_4dp_btn_color_from_primary_to_white"
        android:gravity="center"
        android:paddingBottom="35px"
        android:paddingTop="35px"
        android:text="下一步"
        android:textColor="@color/selector_text_color_from_white_to_primary"
        android:textSize="54px" />
</com.zhy.autolayout.AutoLinearLayout>